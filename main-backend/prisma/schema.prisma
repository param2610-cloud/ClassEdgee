model learninganalytics {
  analytics_id    Int       @id @default(autoincrement())
  student_id      Int?
  course_id       Int?
  metric_type     String    @db.VarChar(50)
  metric_value    Json
  analysis_date   DateTime  @db.Date
  recommendations String[]
