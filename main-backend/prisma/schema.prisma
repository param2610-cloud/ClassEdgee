  alertnotifications                   alertnotifications[]
  announcements                        announcements[]
  backlogsessions                      backlogsessions[]
  departments                          departments[]
  emergencyalerts                      emergencyalerts[]
  eventparticipants                    eventparticipants[]
  events                               events[]
